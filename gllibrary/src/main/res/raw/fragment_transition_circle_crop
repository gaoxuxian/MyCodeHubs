precision mediump float;

uniform sampler2D vTextureFront;
uniform sampler2D vTextureBack;
uniform float progress;
uniform float ratio;
uniform vec4 bgColor;
varying vec2 aCoordinate;

void main(){
    vec2 ratio2 = vec2(1.0, 1.0 / ratio);
    float s = pow(2.0 * abs(progress - 0.5), 3.0);
    float dist = length((aCoordinate - 0.5) * ratio2); // 求对应点相对于原点的距离(圆半径)
    float factor = dist < s ? 0. : 1.;
    gl_FragColor = mix(
            progress < 0.5 ? texture2D(vTextureFront, aCoordinate) : texture2D(vTextureBack, aCoordinate),
            bgColor,
            factor);
}